{% extends 'base.html.twig' %}

{% block title %}{{ collection.name }}{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {% if 'gallery' == collection.type %}
        {{ encore_entry_script_tags('gallery') }}
    {% endif %}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {% if 'gallery' == collection.type %}
        {{ encore_entry_link_tags('gallery') }}
    {% endif %}
{% endblock %}

{% block body %}
    <div class="btn-group float-right">

        <a class="btn btn-outline-secondary" href="{{ path('collection_index') }}">
            <span class="oi oi-arrow-left"></span>
        </a>

        <a class="btn btn-outline-info" href="{{ path('collection_edit', {'id': collection.id}) }}">
            <span class="oi oi-pencil"></span>
        </a>

        {{ include('collection/_delete_form.html.twig') }}
    </div>

    {% if 'gallery' == collection.type %}
        {{ include('collection/_gallery.html.twig') }}
    {% else %}
        no collection template found for "{{ collection.type }}" :(
    {% endif %}
{% endblock %}
