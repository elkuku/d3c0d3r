{% extends 'base.html.twig' %}

{% block title %}Waypoint{% endblock %}

{% block body %}
    <h1>Waypoint</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ waypoint.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ waypoint.name }}</td>
            </tr>
            <tr>
                <th>Lat</th>
                <td>{{ waypoint.lat }}</td>
            </tr>
            <tr>
                <th>Lon</th>
                <td>{{ waypoint.lon }}</td>
            </tr>
            <tr>
                <th>Guid</th>
                <td>{{ waypoint.guid }}</td>
            </tr>
            <tr>
                <th>ImageFilename</th>
                <td>
                    <img class="show-wp-img" src="{{ waypoint.imagePath|imagine_filter('squared_thumbnail_medium') }}">
                    {{ waypoint.imageFilename }}
                </td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('waypoint_index') }}">back to list</a>

    <a href="{{ path('waypoint_edit', {'id': waypoint.id}) }}">edit</a>

    {{ include('waypoint/_delete_form.html.twig') }}
{% endblock %}
